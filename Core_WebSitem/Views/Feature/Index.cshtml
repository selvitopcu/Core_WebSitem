@model EntityLayer.Concrete.Feature
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("Index", "Feature", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description"> Öne Çıkan Post Düzenleme Paneli </p>
                <form class="forms-sample">
                    @Html.HiddenFor(x=>x.FeatureID)
                    <div class="form-group">
                        <label>Header</label>
                        @Html.TextBoxFor(x=>x.Header, new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>İsim</label>
                        @Html.TextBoxFor(x=>x.Name, new {@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label>Başlık</label>
                        @Html.TextBoxFor(x=>x.Title, new {@class="form-control"})
                    </div>
                   

                   
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>

                </form>
            </div>
        </div>
    </div>
}